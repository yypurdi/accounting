<!DOCTYPE html>
<html>
<head lang="en">
<% include head %>
</head>
<body>
<% include side-nav %>
<div id="main">
<% include header-nav %>
<div class="container-fluid">
<section id="main-content">

    <div style="width:40%">
    <h3><%=resource.Title%></h3>
    <form class="form-horizontal" action="/writeAppApWriteoffVerification" method="post">
        <table class="table table-striped">
            <tr class="heading-tr">
                <th><%=resource.Heading%></th>
                <th style="text-align:right"><%=statusMessage%></th>
            </tr>
            <tr>
                <td><%=resource.WriteOffVerificationId.label%></td>
                <td><input type="text" class="form-control" name="writeOffVerificationId" value="<%=record.write_off_verification_id%>"/></td>
            </tr><tr>
                <td><%=resource.Ref.label%></td>
                <td><input type="text" class="form-control" name="ref" value="<%=record.ref%>"/></td>
            </tr><tr>
                <td><%=resource.Date.label%></td>
                <td><input type="text" class="form-control" name="date" value="<%=record.date%>"/></td>
            </tr><tr>
                <td><%=resource.Amount.label%></td>
                <td><input type="text" class="form-control" name="amount" value="<%=record.amount%>"/></td>
            </tr><tr>
                <td><%=resource.Note.label%></td>
                <td><input type="text" class="form-control" name="note" value="<%=record.note%>"/></td>
            </tr><tr>
                <td><%=resource.AcccountNo.label%></td>
                <td><input type="text" class="form-control" name="acccountNo" value="<%=record.acccount_no%>"/></td>
            </tr><tr>
                <td><%=resource.AllowanceAccountNo.label%></td>
                <td><input type="text" class="form-control" name="allowanceAccountNo" value="<%=record.allowance_account_no%>"/></td>
            </tr><tr>
                <td><%=resource.ReferenceNoTobeWriteoff.label%></td>
                <td><input type="text" class="form-control" name="referenceNoTobeWriteoff" value="<%=record.reference_no_tobe_writeoff%>"/></td>
            </tr>
        
        </table>
        <button type="submit" class="btn btn-default">Update</button>
        <% if(statusCode == 200) { %>
        <button type="button" class="btn btn-default""><a href="/<%=session.previouspath%>">Back</a></button>
        <% }else{ %>
        <button type="button" class="btn btn-default" onclick="javascript:window.history.back()">Cancel</button>
        <% } %>
    </form>
    </div>

</section>
</div>
</div>
<% include footer %>
</body>
</html>
