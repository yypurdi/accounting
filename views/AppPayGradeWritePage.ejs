<!DOCTYPE html>
<html>
<head lang="en">
<% include head %>
</head>
<body>
<% include side-nav %>
<div id="main">
<% include header-nav %>
<div class="container-fluid">
<section id="main-content">

    <div style="width:40%">
    <h3><%=resource.Title%></h3>
    <form class="form-horizontal" action="/writeAppPayGrade" method="post">
        <table class="table table-striped">
            <tr class="heading-tr">
                <th><%=resource.Heading%></th>
                <th style="text-align:right"><%=statusMessage%></th>
            </tr>
            <tr>
                <td><%=resource.PayGradeId.label%></td>
                <td><input type="text" class="form-control" name="payGradeId" value="<%=record.pay_grade_id%>"/></td>
            </tr><tr>
                <td><%=resource.PayGradeName.label%></td>
                <td><input type="text" class="form-control" name="payGradeName" value="<%=record.pay_grade_name%>"/></td>
            </tr><tr>
                <td><%=resource.MinSalary.label%></td>
                <td><input type="text" class="form-control" name="minSalary" value="<%=record.min_salary%>"/></td>
            </tr><tr>
                <td><%=resource.MaxSalary.label%></td>
                <td><input type="text" class="form-control" name="maxSalary" value="<%=record.max_salary%>"/></td>
            </tr><tr>
                <td><%=resource.Currency.label%></td>
                <td><input type="text" class="form-control" name="currency" value="<%=record.currency%>"/></td>
            </tr>
        
        </table>
        <button type="submit" class="btn btn-default">Update</button>
        <% if(statusCode == 200) { %>
        <button type="button" class="btn btn-default""><a href="/<%=session.previouspath%>">Back</a></button>
        <% }else{ %>
        <button type="button" class="btn btn-default" onclick="javascript:window.history.back()">Cancel</button>
        <% } %>
    </form>
    </div>

</section>
</div>
</div>
<% include footer %>
</body>
</html>
