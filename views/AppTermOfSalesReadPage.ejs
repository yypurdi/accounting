<!DOCTYPE html>
<html>
<head lang="en">
<% include head %>
</head>
<body>
<% include side-nav %>
<div id="main">
<% include header-nav %>
<div class="container-fluid">
<section id="main-content">

    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true"><h4><%=resource.Heading%></h4></a>
      </li>
    </ul>
    
    <div class="tab-content" id="myTabContent">

        <div class="tab-pane fade in active" id="home" role="tabpanel" aria-labelledby="home-tab">	
            <div style="width:40%">
            <form class="form-horizontal">
                <table class="table table-striped">
                    <tr class="heading-tr">
                        <th> <%=resource.Heading%></th>
                        <th></th>
                    </tr>
                    <tr>
                        <td><%=resource.TermOfSalesId.label%></td>
                        <td><%=record.term_of_sales_id%></td>						
                    </tr><tr>
                        <td><%=resource.TosCode.label%></td>
                        <td><%=record.tos_code%></td>						
                    </tr><tr>
                        <td><%=resource.TosDesc.label%></td>
                        <td><%=record.tos_desc%></td>						
                    </tr><tr>
                        <td><%=resource.DiscountDaysIndays.label%></td>
                        <td><%=record.discount_days_indays%></td>						
                    </tr><tr>
                        <td><%=resource.DueDateIndays.label%></td>
                        <td><%=record.due_date_indays%></td>						
                    </tr><tr>
                        <td><%=resource.EarlyDiscountInpercentage.label%></td>
                        <td><%=record.early_discount_inpercentage%></td>						
                    </tr><tr>
                        <td><%=resource.LateChargesInpercentage.label%></td>
                        <td><%=record.late_charges_inpercentage%></td>						
                    </tr>
                
                </table>
                <% if(session.user_acl=='ROLE_ADMIN') { %>
                <button type="submit" class="btn btn-default"><a href="/writeAppTermOfSales?termOfSalesId=<%=record.term_of_sales_id%>">Edit</a></button>
                <button type="submit" class="btn btn-default"><a href="/deleteAppTermOfSales?termOfSalesId=<%=record.term_of_sales_id%>">Delete</a></button>
                <% } %>
                <button type="button" class="btn btn-default" onclick="javascript:window.history.back()">Back</button>
            </form>
            </div>
        </div>
        
    </div>

</section>
</div>
</div>
<% include footer %>
</body>
</html>
