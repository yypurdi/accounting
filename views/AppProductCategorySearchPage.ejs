<!DOCTYPE html>
<html>
<head lang="en">
<% include head %>
</head>
<body>
<% include side-nav %>
<div id="main">
<% include header-nav %>
<div class="container-fluid">
<section id="main-content">

<form class="form-horizontal" action="/searchAppProductCategory" method="get">    
    <div style="width:50%">
    <h3><%=resource.Title%></h3>
        <input type="hidden" class="form-control" name="rowid" value="0"/>    
        <table class="table table-striped">
            <tr class="heading-tr">
                <th><%=resource.Heading%></th>
                <th></th>
                <th></th>
            </tr>
            <tr>
                <td><%=resource.ProductCategoryId.label%></td>    
                <td><input type="text" class="form-control" name="product_category_id"/></td>
                <td>
                    <button type="submit" name="action" value="first" class="btn btn-default">Find</button>
                    <% if(session.user_acl=='ROLE_ADMIN') { %>
                    <button type="submit" class="btn btn-default"><a href="/newAppProductCategory">Add</a></button>
                    <% } %>
                </td>
            </tr>
        </table>    
    </div>
    
    <div style="width:75%">
        <table class="table table-striped">
            <tr class="heading-tr">
                <th><%=resource.AppProductCategory.ProductCategoryId.header%></th>
                <th><%=resource.AppProductCategory.CategoryName.header%></th>
                <th><%=resource.AppProductCategory.Location.header%></th>
                <th><%=resource.AppProductCategory.DepartmentId.header%></th>
                <th><%=resource.AppProductCategory.IsInventory.header%></th>
                <th><%=resource.AppProductCategory.IsPurchased.header%></th>
                <th><%=resource.AppProductCategory.IsSold.header%></th>
                <th><%=resource.AppProductCategory.InventoryMethod.header%></th>
                <th><%=resource.AppProductCategory.AcctCodeCogs.header%></th>
                <th><%=resource.AppProductCategory.AcctCodeSales.header%></th>
                <th><%=resource.AppProductCategory.AcctCodeSalesReturn.header%></th>
                <th><%=resource.AppProductCategory.AcctCodeInventory.header%></th>
                <th><%=resource.AppProductCategory.AcctCodeConsignment.header%></th>
                <th><%=resource.AppProductCategory.Image.header%></th>
                
            	<th>View</th>
                <% if(session.user_acl=='ROLE_ADMIN') { %>
                <th>Edit</th>
                <th>Delete</th>
                <% } %>
            </tr>
            <% for(var i in records){let row = records[i]; %>			            
            <tr>
                <td><a><%=row.product_category_id%></a></td>
                <td><a><%=row.category_name%></a></td>
                <td><a><%=row.location%></a></td>
                <td><a><%=row.department_id%></a></td>
                <td><a><%=row.is_inventory%></a></td>
                <td><a><%=row.is_purchased%></a></td>
                <td><a><%=row.is_sold%></a></td>
                <td><a><%=row.inventory_method%></a></td>
                <td><a><%=row.acct_code_cogs%></a></td>
                <td><a><%=row.acct_code_sales%></a></td>
                <td><a><%=row.acct_code_sales_return%></a></td>
                <td><a><%=row.acct_code_inventory%></a></td>
                <td><a><%=row.acct_code_consignment%></a></td>
                <td><a><%=row.image%></a></td>
                
                <td><a href="/readAppProductCategory?productCategoryId=<%=row.product_category_id%>"><span class="glyphicon glyphicon-open"></span></a></td>
                <% if(session.user_acl=='ROLE_ADMIN') { %>
                <td><a href="/writeAppProductCategory?productCategoryId=<%=row.product_category_id%>"><span class="glyphicon glyphicon-edit"></span></a></td>
                <td><a href="/deleteAppProductCategory?productCategoryId=<%=row.product_category_id%>"><span class="glyphicon glyphicon-trash"></span></a></td>
                <% } %>
            </tr>
            <% } %>            
        </table>
        
        <div class="table-pagination">
           <ul class="pagination">
                 <li><button type="submit" name="action" value="first" class="btn btn-default">First</button></li>
                 <li><button type="submit" name="action" value="previous" class="btn btn-default">Previous</button></li>
                 <li><button type="submit" name="action" value="next" class="btn btn-default">Next</button></li>
                 <li><button type="submit" name="action" value="last" class="btn btn-default">Last</button></li>
           </ul>	        
        </div>
    </div>
</form>                

</section>
</div>
</div>
<% include footer %>
</body>
</html>
