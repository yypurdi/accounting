<!DOCTYPE html>
<html>
<head lang="en">
<% include head %>
</head>
<body>
<% include side-nav %>
<div id="main">
<% include header-nav %>
<div class="container-fluid">
<section id="main-content">

<form class="form-horizontal" action="/searchAppEmployee" method="get">    
    <div style="width:50%">
    <h3><%=resource.Title%></h3>
        <input type="hidden" class="form-control" name="rowid" value="0"/>    
        <table class="table table-striped">
            <tr class="heading-tr">
                <th><%=resource.Heading%></th>
                <th></th>
                <th></th>
            </tr>
            <tr>
                <td><%=resource.EmployeeId.label%></td>    
                <td><input type="text" class="form-control" name="employee_id"/></td>
                <td>
                    <button type="submit" name="action" value="first" class="btn btn-default">Find</button>
                    <% if(session.user_acl=='ROLE_ADMIN') { %>
                    <button type="submit" class="btn btn-default"><a href="/newAppEmployee">Add</a></button>
                    <% } %>
                </td>
            </tr>
        </table>    
    </div>
    
    <div style="width:75%">
        <table class="table table-striped">
            <tr class="heading-tr">
                <th><%=resource.AppEmployee.EmployeeId.header%></th>
                <th><%=resource.AppEmployee.EmployeeNumber.header%></th>
                <th><%=resource.AppEmployee.Firstname.header%></th>
                <th><%=resource.AppEmployee.Middlename.header%></th>
                <th><%=resource.AppEmployee.Lastname.header%></th>
                <th><%=resource.AppEmployee.Nationality.header%></th>
                <th><%=resource.AppEmployee.Dob.header%></th>
                <th><%=resource.AppEmployee.Gender.header%></th>
                <th><%=resource.AppEmployee.MaritalStatus.header%></th>
                <th><%=resource.AppEmployee.Ethnicity.header%></th>
                <th><%=resource.AppEmployee.KtpNumber.header%></th>
                <th><%=resource.AppEmployee.PassportNumber.header%></th>
                <th><%=resource.AppEmployee.DrivingLicenceNo.header%></th>
                <th><%=resource.AppEmployee.AddressLine1.header%></th>
                <th><%=resource.AppEmployee.AddressLine2.header%></th>
                <th><%=resource.AppEmployee.CityId.header%></th>
                <th><%=resource.AppEmployee.CountryId.header%></th>
                <th><%=resource.AppEmployee.ProvinceId.header%></th>
                <th><%=resource.AppEmployee.PostalCode.header%></th>
                <th><%=resource.AppEmployee.HomePhone.header%></th>
                <th><%=resource.AppEmployee.MobilePhone.header%></th>
                <th><%=resource.AppEmployee.WorkEmail.header%></th>
                <th><%=resource.AppEmployee.PrivateEmail.header%></th>
                <th><%=resource.AppEmployee.JoinedDate.header%></th>
                <th><%=resource.AppEmployee.ConfirmationDate.header%></th>
                <th><%=resource.AppEmployee.TerminationDate.header%></th>
                <th><%=resource.AppEmployee.SupervisorName.header%></th>
                <th><%=resource.AppEmployee.IndirectSupervisorName.header%></th>
                <th><%=resource.AppEmployee.FirstLevelApprover.header%></th>
                <th><%=resource.AppEmployee.SecondLevelApprover.header%></th>
                <th><%=resource.AppEmployee.ThirdLevelApprover.header%></th>
                <th><%=resource.AppEmployee.Notes.header%></th>
                <th><%=resource.AppEmployee.DepartmentId.header%></th>
                <th><%=resource.AppEmployee.WorkStationId.header%></th>
                <th><%=resource.AppEmployee.JobTitleId.header%></th>
                <th><%=resource.AppEmployee.PayGradeId.header%></th>
                <th><%=resource.AppEmployee.EmploymentStatusId.header%></th>
                
            	<th>View</th>
                <% if(session.user_acl=='ROLE_ADMIN') { %>
                <th>Edit</th>
                <th>Delete</th>
                <% } %>
            </tr>
            <% for(var i in records){let row = records[i]; %>			            
            <tr>
                <td><a><%=row.employee_id%></a></td>
                <td><a><%=row.employee_number%></a></td>
                <td><a><%=row.firstname%></a></td>
                <td><a><%=row.middlename%></a></td>
                <td><a><%=row.lastname%></a></td>
                <td><a><%=row.nationality%></a></td>
                <td><a><%=dateFormat(row.dob,'mmm-dd-yyyy')%></a></td>
                <td><a><%=row.gender%></a></td>
                <td><a><%=row.marital_status%></a></td>
                <td><a><%=row.ethnicity%></a></td>
                <td><a><%=row.ktp_number%></a></td>
                <td><a><%=row.passport_number%></a></td>
                <td><a><%=row.driving_licence_no%></a></td>
                <td><a><%=row.address_line1%></a></td>
                <td><a><%=row.address_line2%></a></td>
                <td><a><%=row.city_id%></a></td>
                <td><a><%=row.country_id%></a></td>
                <td><a><%=row.province_id%></a></td>
                <td><a><%=row.postal_code%></a></td>
                <td><a><%=row.home_phone%></a></td>
                <td><a><%=row.mobile_phone%></a></td>
                <td><a><%=row.work_email%></a></td>
                <td><a><%=row.private_email%></a></td>
                <td><a><%=dateFormat(row.joined_date,'mmm-dd-yyyy')%></a></td>
                <td><a><%=dateFormat(row.confirmation_date,'mmm-dd-yyyy')%></a></td>
                <td><a><%=dateFormat(row.termination_date,'mmm-dd-yyyy')%></a></td>
                <td><a><%=row.supervisor_name%></a></td>
                <td><a><%=row.indirect_supervisor_name%></a></td>
                <td><a><%=row.first_level_approver%></a></td>
                <td><a><%=row.second_level_approver%></a></td>
                <td><a><%=row.third_level_approver%></a></td>
                <td><a><%=row.notes%></a></td>
                <td><a><%=row.department_id%></a></td>
                <td><a><%=row.work_station_id%></a></td>
                <td><a><%=row.job_title_id%></a></td>
                <td><a><%=row.pay_grade_id%></a></td>
                <td><a><%=row.employment_status_id%></a></td>
                
                <td><a href="/readAppEmployee?employeeId=<%=row.employee_id%>"><span class="glyphicon glyphicon-open"></span></a></td>
                <% if(session.user_acl=='ROLE_ADMIN') { %>
                <td><a href="/writeAppEmployee?employeeId=<%=row.employee_id%>"><span class="glyphicon glyphicon-edit"></span></a></td>
                <td><a href="/deleteAppEmployee?employeeId=<%=row.employee_id%>"><span class="glyphicon glyphicon-trash"></span></a></td>
                <% } %>
            </tr>
            <% } %>            
        </table>
        
        <div class="table-pagination">
           <ul class="pagination">
                 <li><button type="submit" name="action" value="first" class="btn btn-default">First</button></li>
                 <li><button type="submit" name="action" value="previous" class="btn btn-default">Previous</button></li>
                 <li><button type="submit" name="action" value="next" class="btn btn-default">Next</button></li>
                 <li><button type="submit" name="action" value="last" class="btn btn-default">Last</button></li>
           </ul>	        
        </div>
    </div>
</form>                

</section>
</div>
</div>
<% include footer %>
</body>
</html>
