<!DOCTYPE html>
<html>
<head lang="en">
<% include head %>
</head>
<body>
<% include side-nav %>
<div id="main">
<% include header-nav %>
<div class="container-fluid">
<section id="main-content">

<form class="form-horizontal" action="/searchAppArCustomerDetail" method="get">    
    <div style="width:50%">
    <h3><%=resource.Title%></h3>
        <input type="hidden" class="form-control" name="rowid" value="0"/>    
        <table class="table table-striped">
            <tr class="heading-tr">
                <th><%=resource.Heading%></th>
                <th></th>
                <th></th>
            </tr>
            <tr>
                <td><%=resource.ArCustomerDetailId.label%></td>    
                <td><input type="text" class="form-control" name="ar_customer_detail_id"/></td>
                <td>
                    <button type="submit" name="action" value="first" class="btn btn-default">Find</button>
                    <% if(session.user_acl=='ROLE_ADMIN') { %>
                    <button type="submit" class="btn btn-default"><a href="/newAppArCustomerDetail">Add</a></button>
                    <% } %>
                </td>
            </tr>
        </table>    
    </div>
    
    <div style="width:75%">
        <table class="table table-striped">
            <tr class="heading-tr">
                <th><%=resource.AppArCustomerDetail.ArCustomerDetailId.header%></th>
                <th><%=resource.AppArCustomerDetail.CustomerId.header%></th>
                <th><%=resource.AppArCustomerDetail.Date.header%></th>
                <th><%=resource.AppArCustomerDetail.Note.header%></th>
                <th><%=resource.AppArCustomerDetail.Debit.header%></th>
                <th><%=resource.AppArCustomerDetail.Credit.header%></th>
                <th><%=resource.AppArCustomerDetail.DebitBalance.header%></th>
                <th><%=resource.AppArCustomerDetail.CreditBalance.header%></th>
                <th><%=resource.AppArCustomerDetail.Balance.header%></th>
                <th><%=resource.AppArCustomerDetail.ReferenceNo.header%></th>
                <th><%=resource.AppArCustomerDetail.ArDueDate.header%></th>
                <th><%=resource.AppArCustomerDetail.Status.header%></th>
                
            	<th>View</th>
                <% if(session.user_acl=='ROLE_ADMIN') { %>
                <th>Edit</th>
                <th>Delete</th>
                <% } %>
            </tr>
            <% for(var i in records){let row = records[i]; %>			            
            <tr>
                <td><a><%=row.ar_customer_detail_id%></a></td>
                <td><a><%=row.customer_id%></a></td>
                <td><a><%=dateFormat(row.date,'mmm-dd-yyyy')%></a></td>
                <td><a><%=row.note%></a></td>
                <td><a><%=row.debit%></a></td>
                <td><a><%=row.credit%></a></td>
                <td><a><%=row.debit_balance%></a></td>
                <td><a><%=row.credit_balance%></a></td>
                <td><a><%=row.balance%></a></td>
                <td><a><%=row.reference_no%></a></td>
                <td><a><%=dateFormat(row.ar_due_date,'mmm-dd-yyyy')%></a></td>
                <td><a><%=row.status%></a></td>
                
                <td><a href="/readAppArCustomerDetail?arCustomerDetailId=<%=row.ar_customer_detail_id%>"><span class="glyphicon glyphicon-open"></span></a></td>
                <% if(session.user_acl=='ROLE_ADMIN') { %>
                <td><a href="/writeAppArCustomerDetail?arCustomerDetailId=<%=row.ar_customer_detail_id%>"><span class="glyphicon glyphicon-edit"></span></a></td>
                <td><a href="/deleteAppArCustomerDetail?arCustomerDetailId=<%=row.ar_customer_detail_id%>"><span class="glyphicon glyphicon-trash"></span></a></td>
                <% } %>
            </tr>
            <% } %>            
        </table>
        
        <div class="table-pagination">
           <ul class="pagination">
                 <li><button type="submit" name="action" value="first" class="btn btn-default">First</button></li>
                 <li><button type="submit" name="action" value="previous" class="btn btn-default">Previous</button></li>
                 <li><button type="submit" name="action" value="next" class="btn btn-default">Next</button></li>
                 <li><button type="submit" name="action" value="last" class="btn btn-default">Last</button></li>
           </ul>	        
        </div>
    </div>
</form>                

</section>
</div>
</div>
<% include footer %>
</body>
</html>
