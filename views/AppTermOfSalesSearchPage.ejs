<!DOCTYPE html>
<html>
<head lang="en">
<% include head %>
</head>
<body>
<% include side-nav %>
<div id="main">
<% include header-nav %>
<div class="container-fluid">
<section id="main-content">

<form class="form-horizontal" action="/searchAppTermOfSales" method="get">    
    <div style="width:50%">
    <h3><%=resource.Title%></h3>
        <input type="hidden" class="form-control" name="rowid" value="0"/>    
        <table class="table table-striped">
            <tr class="heading-tr">
                <th><%=resource.Heading%></th>
                <th></th>
                <th></th>
            </tr>
            <tr>
                <td><%=resource.TermOfSalesId.label%></td>    
                <td><input type="text" class="form-control" name="term_of_sales_id"/></td>
                <td>
                    <button type="submit" name="action" value="first" class="btn btn-default">Find</button>
                    <% if(session.user_acl=='ROLE_ADMIN') { %>
                    <button type="submit" class="btn btn-default"><a href="/newAppTermOfSales">Add</a></button>
                    <% } %>
                </td>
            </tr>
        </table>    
    </div>
    
    <div style="width:75%">
        <table class="table table-striped">
            <tr class="heading-tr">
                <th><%=resource.AppTermOfSales.TermOfSalesId.header%></th>
                <th><%=resource.AppTermOfSales.TosCode.header%></th>
                <th><%=resource.AppTermOfSales.TosDesc.header%></th>
                <th><%=resource.AppTermOfSales.DiscountDaysIndays.header%></th>
                <th><%=resource.AppTermOfSales.DueDateIndays.header%></th>
                <th><%=resource.AppTermOfSales.EarlyDiscountInpercentage.header%></th>
                <th><%=resource.AppTermOfSales.LateChargesInpercentage.header%></th>
                
            	<th>View</th>
                <% if(session.user_acl=='ROLE_ADMIN') { %>
                <th>Edit</th>
                <th>Delete</th>
                <% } %>
            </tr>
            <% for(var i in records){let row = records[i]; %>			            
            <tr>
                <td><a><%=row.term_of_sales_id%></a></td>
                <td><a><%=row.tos_code%></a></td>
                <td><a><%=row.tos_desc%></a></td>
                <td><a><%=row.discount_days_indays%></a></td>
                <td><a><%=row.due_date_indays%></a></td>
                <td><a><%=row.early_discount_inpercentage%></a></td>
                <td><a><%=row.late_charges_inpercentage%></a></td>
                
                <td><a href="/readAppTermOfSales?termOfSalesId=<%=row.term_of_sales_id%>"><span class="glyphicon glyphicon-open"></span></a></td>
                <% if(session.user_acl=='ROLE_ADMIN') { %>
                <td><a href="/writeAppTermOfSales?termOfSalesId=<%=row.term_of_sales_id%>"><span class="glyphicon glyphicon-edit"></span></a></td>
                <td><a href="/deleteAppTermOfSales?termOfSalesId=<%=row.term_of_sales_id%>"><span class="glyphicon glyphicon-trash"></span></a></td>
                <% } %>
            </tr>
            <% } %>            
        </table>
        
        <div class="table-pagination">
           <ul class="pagination">
                 <li><button type="submit" name="action" value="first" class="btn btn-default">First</button></li>
                 <li><button type="submit" name="action" value="previous" class="btn btn-default">Previous</button></li>
                 <li><button type="submit" name="action" value="next" class="btn btn-default">Next</button></li>
                 <li><button type="submit" name="action" value="last" class="btn btn-default">Last</button></li>
           </ul>	        
        </div>
    </div>
</form>                

</section>
</div>
</div>
<% include footer %>
</body>
</html>
