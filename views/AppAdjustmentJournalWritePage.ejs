<!DOCTYPE html>
<html>
<head lang="en">
<% include head %>
</head>
<body>
<% include side-nav %>
<div id="main">
<% include header-nav %>
<div class="container-fluid">
<section id="main-content">

    <div style="width:40%">
    <h3><%=resource.Title%></h3>
    <form class="form-horizontal" action="/writeAppAdjustmentJournal" method="post">
        <table class="table table-striped">
            <tr class="heading-tr">
                <th><%=resource.Heading%></th>
                <th style="text-align:right"><%=statusMessage%></th>
            </tr>
            <tr>
                <td><%=resource.AdjustmentJournalId.label%></td>
                <td><input type="text" class="form-control" name="adjustmentJournalId" value="<%=record.adjustment_journal_id%>"/></td>
            </tr><tr>
                <td><%=resource.AccountNo.label%></td>
                <td><input type="text" class="form-control" name="accountNo" value="<%=record.account_no%>"/></td>
            </tr><tr>
                <td><%=resource.Date.label%></td>
                <td><input type="text" class="form-control" name="date" value="<%=record.date%>"/></td>
            </tr><tr>
                <td><%=resource.ReferenceNo.label%></td>
                <td><input type="text" class="form-control" name="referenceNo" value="<%=record.reference_no%>"/></td>
            </tr><tr>
                <td><%=resource.InOrDebit.label%></td>
                <td><input type="text" class="form-control" name="inOrDebit" value="<%=record.in_or_debit%>"/></td>
            </tr><tr>
                <td><%=resource.OutOrCredit.label%></td>
                <td><input type="text" class="form-control" name="outOrCredit" value="<%=record.out_or_credit%>"/></td>
            </tr>
        
        </table>
        <button type="submit" class="btn btn-default">Update</button>
        <% if(statusCode == 200) { %>
        <button type="button" class="btn btn-default""><a href="/<%=session.previouspath%>">Back</a></button>
        <% }else{ %>
        <button type="button" class="btn btn-default" onclick="javascript:window.history.back()">Cancel</button>
        <% } %>
    </form>
    </div>

</section>
</div>
</div>
<% include footer %>
</body>
</html>
