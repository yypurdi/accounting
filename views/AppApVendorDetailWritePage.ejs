<!DOCTYPE html>
<html>
<head lang="en">
<% include head %>
</head>
<body>
<% include side-nav %>
<div id="main">
<% include header-nav %>
<div class="container-fluid">
<section id="main-content">

    <div style="width:40%">
    <h3><%=resource.Title%></h3>
    <form class="form-horizontal" action="/writeAppApVendorDetail" method="post">
        <table class="table table-striped">
            <tr class="heading-tr">
                <th><%=resource.Heading%></th>
                <th style="text-align:right"><%=statusMessage%></th>
            </tr>
            <tr>
                <td><%=resource.ApVendorDetailId.label%></td>
                <td><input type="text" class="form-control" name="apVendorDetailId" value="<%=record.ap_vendor_detail_id%>"/></td>
            </tr><tr>
                <td><%=resource.VendorId.label%></td>
                <td><input type="text" class="form-control" name="vendorId" value="<%=record.vendor_id%>"/></td>
            </tr><tr>
                <td><%=resource.Date.label%></td>
                <td><input type="text" class="form-control" name="date" value="<%=record.date%>"/></td>
            </tr><tr>
                <td><%=resource.Note.label%></td>
                <td><input type="text" class="form-control" name="note" value="<%=record.note%>"/></td>
            </tr><tr>
                <td><%=resource.Debit.label%></td>
                <td><input type="text" class="form-control" name="debit" value="<%=record.debit%>"/></td>
            </tr><tr>
                <td><%=resource.Credit.label%></td>
                <td><input type="text" class="form-control" name="credit" value="<%=record.credit%>"/></td>
            </tr><tr>
                <td><%=resource.DebitBalance.label%></td>
                <td><input type="text" class="form-control" name="debitBalance" value="<%=record.debit_balance%>"/></td>
            </tr><tr>
                <td><%=resource.CreditBalance.label%></td>
                <td><input type="text" class="form-control" name="creditBalance" value="<%=record.credit_balance%>"/></td>
            </tr><tr>
                <td><%=resource.Balance.label%></td>
                <td><input type="text" class="form-control" name="balance" value="<%=record.balance%>"/></td>
            </tr><tr>
                <td><%=resource.ReferenceNo.label%></td>
                <td><input type="text" class="form-control" name="referenceNo" value="<%=record.reference_no%>"/></td>
            </tr><tr>
                <td><%=resource.ArDueDate.label%></td>
                <td><input type="text" class="form-control" name="arDueDate" value="<%=record.ar_due_date%>"/></td>
            </tr><tr>
                <td><%=resource.Status.label%></td>
                <td><input type="text" class="form-control" name="status" value="<%=record.status%>"/></td>
            </tr>
        
        </table>
        <button type="submit" class="btn btn-default">Update</button>
        <% if(statusCode == 200) { %>
        <button type="button" class="btn btn-default""><a href="/<%=session.previouspath%>">Back</a></button>
        <% }else{ %>
        <button type="button" class="btn btn-default" onclick="javascript:window.history.back()">Cancel</button>
        <% } %>
    </form>
    </div>

</section>
</div>
</div>
<% include footer %>
</body>
</html>
