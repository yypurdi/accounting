<!DOCTYPE html>
<html>
<head lang="en">
<% include head %>
</head>
<body>
<% include side-nav %>
<div id="main">
<% include header-nav %>
<div class="container-fluid">
<section id="main-content">

    <div style="width:40%">
    <h3><%=resource.Title%></h3>
    <form class="form-horizontal" action="/writeAppApOpeningBalance" method="post">
        <table class="table table-striped">
            <tr class="heading-tr">
                <th><%=resource.Heading%></th>
                <th style="text-align:right"><%=statusMessage%></th>
            </tr>
            <tr>
                <td><%=resource.ApOpeningBalanceId.label%></td>
                <td><input type="text" class="form-control" name="apOpeningBalanceId" value="<%=record.ap_opening_balance_id%>"/></td>
            </tr><tr>
                <td><%=resource.VendorId.label%></td>
                <td><input type="text" class="form-control" name="vendorId" value="<%=record.vendor_id%>"/></td>
            </tr><tr>
                <td><%=resource.Date.label%></td>
                <td><input type="text" class="form-control" name="date" value="<%=record.date%>"/></td>
            </tr><tr>
                <td><%=resource.InvoiceNo.label%></td>
                <td><input type="text" class="form-control" name="invoiceNo" value="<%=record.invoice_no%>"/></td>
            </tr><tr>
                <td><%=resource.PurchaseOrderNo.label%></td>
                <td><input type="text" class="form-control" name="purchaseOrderNo" value="<%=record.purchase_order_no%>"/></td>
            </tr><tr>
                <td><%=resource.CurrencyId.label%></td>
                <td><input type="text" class="form-control" name="currencyId" value="<%=record.currency_id%>"/></td>
            </tr><tr>
                <td><%=resource.PayableValue.label%></td>
                <td><input type="text" class="form-control" name="payableValue" value="<%=record.payable_value%>"/></td>
            </tr><tr>
                <td><%=resource.TermOfPaymentId.label%></td>
                <td><input type="text" class="form-control" name="termOfPaymentId" value="<%=record.term_of_payment_id%>"/></td>
            </tr>
        
        </table>
        <button type="submit" class="btn btn-default">Update</button>
        <% if(statusCode == 200) { %>
        <button type="button" class="btn btn-default""><a href="/<%=session.previouspath%>">Back</a></button>
        <% }else{ %>
        <button type="button" class="btn btn-default" onclick="javascript:window.history.back()">Cancel</button>
        <% } %>
    </form>
    </div>

</section>
</div>
</div>
<% include footer %>
</body>
</html>
