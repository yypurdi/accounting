<!DOCTYPE html>
<html>
<head lang="en">
<% include head %>
</head>
<body>
<% include side-nav %>
<div id="main">
<% include header-nav %>
<div class="container-fluid">
<section id="main-content">

    <div style="width:40%">
    <h3><%=resource.Title%></h3>
    <form class="form-horizontal" action="/writeAppProductAcctCode" method="post">
        <table class="table table-striped">
            <tr class="heading-tr">
                <th><%=resource.Heading%></th>
                <th style="text-align:right"><%=statusMessage%></th>
            </tr>
            <tr>
                <td><%=resource.ProductAcctCodeAndCogsId.label%></td>
                <td><input type="text" class="form-control" name="productAcctCodeAndCogsId" value="<%=record.product_acct_code_and_cogs_id%>"/></td>
            </tr><tr>
                <td><%=resource.IsInventory.label%></td>
                <td><input type="text" class="form-control" name="isInventory" value="<%=record.is_inventory%>"/></td>
            </tr><tr>
                <td><%=resource.IsPurchased.label%></td>
                <td><input type="text" class="form-control" name="isPurchased" value="<%=record.is_purchased%>"/></td>
            </tr><tr>
                <td><%=resource.IsSold.label%></td>
                <td><input type="text" class="form-control" name="isSold" value="<%=record.is_sold%>"/></td>
            </tr><tr>
                <td><%=resource.AcctCodeCogs.label%></td>
                <td><input type="text" class="form-control" name="acctCodeCogs" value="<%=record.acct_code_cogs%>"/></td>
            </tr><tr>
                <td><%=resource.AcctCodeSales.label%></td>
                <td><input type="text" class="form-control" name="acctCodeSales" value="<%=record.acct_code_sales%>"/></td>
            </tr><tr>
                <td><%=resource.AcctCodeSalesReturn.label%></td>
                <td><input type="text" class="form-control" name="acctCodeSalesReturn" value="<%=record.acct_code_sales_return%>"/></td>
            </tr><tr>
                <td><%=resource.AcctCodeInventory.label%></td>
                <td><input type="text" class="form-control" name="acctCodeInventory" value="<%=record.acct_code_inventory%>"/></td>
            </tr><tr>
                <td><%=resource.AcctCodeConsignment.label%></td>
                <td><input type="text" class="form-control" name="acctCodeConsignment" value="<%=record.acct_code_consignment%>"/></td>
            </tr><tr>
                <td><%=resource.ProductId.label%></td>
                <td><input type="text" class="form-control" name="productId" value="<%=record.product_id%>"/></td>
            </tr>
        
        </table>
        <button type="submit" class="btn btn-default">Update</button>
        <% if(statusCode == 200) { %>
        <button type="button" class="btn btn-default""><a href="/<%=session.previouspath%>">Back</a></button>
        <% }else{ %>
        <button type="button" class="btn btn-default" onclick="javascript:window.history.back()">Cancel</button>
        <% } %>
    </form>
    </div>

</section>
</div>
</div>
<% include footer %>
</body>
</html>
