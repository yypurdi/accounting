<!DOCTYPE html>
<html>
<head lang="en">
<% include head %>
</head>
<body>
<% include side-nav %>
<div id="main">
<% include header-nav %>
<div class="container-fluid">
<section id="main-content">

    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true"><h4><%=resource.Heading%></h4></a>
      </li>
    </ul>
    
    <div class="tab-content" id="myTabContent">

        <div class="tab-pane fade in active" id="home" role="tabpanel" aria-labelledby="home-tab">	
            <div style="width:40%">
            <form class="form-horizontal">
                <table class="table table-striped">
                    <tr class="heading-tr">
                        <th> <%=resource.Heading%></th>
                        <th></th>
                    </tr>
                    <tr>
                        <td><%=resource.WriteOffVerificationId.label%></td>
                        <td><%=record.write_off_verification_id%></td>						
                    </tr><tr>
                        <td><%=resource.Ref.label%></td>
                        <td><%=record.ref%></td>						
                    </tr><tr>
                        <td><%=resource.Date.label%></td>
                        <td><%=dateFormat(record.date,'mmm-dd-yyyy HH:MM:ss')%></td>						
                    </tr><tr>
                        <td><%=resource.Amount.label%></td>
                        <td><%=record.amount%></td>						
                    </tr><tr>
                        <td><%=resource.Note.label%></td>
                        <td><%=record.note%></td>						
                    </tr><tr>
                        <td><%=resource.AcccountNo.label%></td>
                        <td><%=record.acccount_no%></td>						
                    </tr><tr>
                        <td><%=resource.AllowanceAccountNo.label%></td>
                        <td><%=record.allowance_account_no%></td>						
                    </tr><tr>
                        <td><%=resource.ReferenceNoTobeWriteoff.label%></td>
                        <td><%=record.reference_no_tobe_writeoff%></td>						
                    </tr>
                
                </table>
                <% if(session.user_acl=='ROLE_ADMIN') { %>
                <button type="submit" class="btn btn-default"><a href="/writeAppArWriteoffVerification?writeOffVerificationId=<%=record.write_off_verification_id%>">Edit</a></button>
                <button type="submit" class="btn btn-default"><a href="/deleteAppArWriteoffVerification?writeOffVerificationId=<%=record.write_off_verification_id%>">Delete</a></button>
                <% } %>
                <button type="button" class="btn btn-default" onclick="javascript:window.history.back()">Back</button>
            </form>
            </div>
        </div>
        
    </div>

</section>
</div>
</div>
<% include footer %>
</body>
</html>
