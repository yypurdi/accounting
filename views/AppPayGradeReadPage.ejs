                    <td><a><%=rec.pay_grade_id%></a></td>
                    <td><a><%=rec.employment_status_id%></a></td>
                    
                    <td><a href="/readAppEmployee?employeeId=<%=rec.employee_id%>"><span class="glyphicon glyphicon-open"></span></a></td>
                    <% if(session.user_acl=='ROLE_ADMIN') { %>
                    <td><a href="/writeAppEmployee?employeeId=<%=rec.employee_id%>"><span class="glyphicon glyphicon-edit"></span></a></td>
                    <td><a href="/deleteAppEmployee?employeeId=<%=rec.employee_id%>"><span class="glyphicon glyphicon-trash"></span></a></td>
                    <% } %>
                </tr>
                <% } %>
            </table>        
	    <button type="submit" class="btn btn-default"><a href="/newAppEmployee">Add</a></button>
	    <button type="submit" class="btn btn-default">Clear</button>
	    </div>	    
        </div>            
        
    </div>

</section>
</div>
</div>
<% include footer %>
</body>
</html>
