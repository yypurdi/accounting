                    <td><a><%=rec.address_line1%></a></td>
                    <td><a><%=rec.address_line2%></a></td>
                    <td><a><%=rec.city_id%></a></td>
                    <td><a><%=rec.country_id%></a></td>
                    <td><a><%=rec.province_id%></a></td>
                    <td><a><%=rec.postal_code%></a></td>
                    <td><a><%=rec.home_phone%></a></td>
                    <td><a><%=rec.mobile_phone%></a></td>
                    <td><a><%=rec.work_email%></a></td>
                    <td><a><%=rec.private_email%></a></td>
                    <td><a><%=dateFormat(rec.joined_date,'mmm-dd-yyyy h:MM:ss TT')%></a></td>
                    <td><a><%=dateFormat(rec.confirmation_date,'mmm-dd-yyyy h:MM:ss TT')%></a></td>
                    <td><a><%=dateFormat(rec.termination_date,'mmm-dd-yyyy h:MM:ss TT')%></a></td>
                    <td><a><%=rec.supervisor_name%></a></td>
                    <td><a><%=rec.indirect_supervisor_name%></a></td>
                    <td><a><%=rec.first_level_approver%></a></td>
