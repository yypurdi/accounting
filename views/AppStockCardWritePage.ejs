<!DOCTYPE html>
<html>
<head lang="en">
<% include head %>
</head>
<body>
<% include side-nav %>
<div id="main">
<% include header-nav %>
<div class="container-fluid">
<section id="main-content">

    <div style="width:40%">
    <h3><%=resource.Title%></h3>
    <form class="form-horizontal" action="/writeAppStockCard" method="post">
        <table class="table table-striped">
            <tr class="heading-tr">
                <th><%=resource.Heading%></th>
                <th style="text-align:right"><%=statusMessage%></th>
            </tr>
            <tr>
                <td><%=resource.StockCardId.label%></td>
                <td><input type="text" class="form-control" name="stockCardId" value="<%=record.stock_card_id%>"/></td>
            </tr><tr>
                <td><%=resource.ProductId.label%></td>
                <td><input type="text" class="form-control" name="productId" value="<%=record.product_id%>"/></td>
            </tr><tr>
                <td><%=resource.TransactionDate.label%></td>
                <td><input type="text" class="form-control" name="transactionDate" value="<%=record.transaction_date%>"/></td>
            </tr><tr>
                <td><%=resource.RefNo.label%></td>
                <td><input type="text" class="form-control" name="refNo" value="<%=record.ref_no%>"/></td>
            </tr><tr>
                <td><%=resource.DocType.label%></td>
                <td><input type="text" class="form-control" name="docType" value="<%=record.doc_type%>"/></td>
            </tr><tr>
                <td><%=resource.TransactionType.label%></td>
                <td><input type="text" class="form-control" name="transactionType" value="<%=record.transaction_type%>"/></td>
            </tr><tr>
                <td><%=resource.TransactionQty.label%></td>
                <td><input type="text" class="form-control" name="transactionQty" value="<%=record.transaction_qty%>"/></td>
            </tr>
        
        </table>
        <button type="submit" class="btn btn-default">Update</button>
        <% if(statusCode == 200) { %>
        <button type="button" class="btn btn-default""><a href="/<%=session.previouspath%>">Back</a></button>
        <% }else{ %>
        <button type="button" class="btn btn-default" onclick="javascript:window.history.back()">Cancel</button>
        <% } %>
    </form>
    </div>

</section>
</div>
</div>
<% include footer %>
</body>
</html>
