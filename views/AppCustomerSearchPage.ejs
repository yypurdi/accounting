<!DOCTYPE html>
<html>
<head lang="en">
<% include head %>
</head>
<body>
<% include side-nav %>
<div id="main">
<% include header-nav %>
<div class="container-fluid">
<section id="main-content">

<form class="form-horizontal" action="/searchAppCustomer" method="get">    
    <div style="width:50%">
    <h3><%=resource.Title%></h3>
        <input type="hidden" class="form-control" name="rowid" value="0"/>    
        <table class="table table-striped">
            <tr class="heading-tr">
                <th><%=resource.Heading%></th>
                <th></th>
                <th></th>
            </tr>
            <tr>
                <td><%=resource.CustomerId.label%></td>    
                <td><input type="text" class="form-control" name="customer_id"/></td>
                <td>
                    <button type="submit" name="action" value="first" class="btn btn-default">Find</button>
                    <% if(session.user_acl=='ROLE_ADMIN') { %>
                    <button type="submit" class="btn btn-default"><a href="/newAppCustomer">Add</a></button>
                    <% } %>
                </td>
            </tr>
        </table>    
    </div>
    
    <div style="width:75%">
        <table class="table table-striped">
            <tr class="heading-tr">
                <th><%=resource.AppCustomer.CustomerId.header%></th>
                <th><%=resource.AppCustomer.CustNo.header%></th>
                <th><%=resource.AppCustomer.CustName.header%></th>
                <th><%=resource.AppCustomer.CustType.header%></th>
                <th><%=resource.AppCustomer.CustClassification.header%></th>
                <th><%=resource.AppCustomer.CustCategory.header%></th>
                <th><%=resource.AppCustomer.ContactPerson.header%></th>
                <th><%=resource.AppCustomer.ContactPosition.header%></th>
                <th><%=resource.AppCustomer.ContactPersonMobilePhone.header%></th>
                <th><%=resource.AppCustomer.ContactPersonEmail.header%></th>
                <th><%=resource.AppCustomer.CustTaxId.header%></th>
                <th><%=resource.AppCustomer.CustCreditLimit.header%></th>
                <th><%=resource.AppCustomer.CustPhone1.header%></th>
                <th><%=resource.AppCustomer.CustPhone2.header%></th>
                <th><%=resource.AppCustomer.CustFax.header%></th>
                <th><%=resource.AppCustomer.CustEmailCompany.header%></th>
                <th><%=resource.AppCustomer.CustWebsite.header%></th>
                <th><%=resource.AppCustomer.CustCurrency.header%></th>
                <th><%=resource.AppCustomer.CustAddress1.header%></th>
                <th><%=resource.AppCustomer.CustAddress2.header%></th>
                <th><%=resource.AppCustomer.CustPostalCode.header%></th>
                <th><%=resource.AppCustomer.CityId.header%></th>
                <th><%=resource.AppCustomer.ProvinceId.header%></th>
                <th><%=resource.AppCustomer.CountryId.header%></th>
                <th><%=resource.AppCustomer.DeliveryAddress1.header%></th>
                <th><%=resource.AppCustomer.DeliveryAddress2.header%></th>
                <th><%=resource.AppCustomer.DeliveryAddressPostalCode.header%></th>
                <th><%=resource.AppCustomer.DeliveryAddressCity.header%></th>
                <th><%=resource.AppCustomer.DeliveryAddressProvince.header%></th>
                <th><%=resource.AppCustomer.DeliveryAddressCountry.header%></th>
                <th><%=resource.AppCustomer.ContactPerson2nd.header%></th>
                <th><%=resource.AppCustomer.ContactPosition2nd.header%></th>
                <th><%=resource.AppCustomer.ContactPersonMobilePhone2nd.header%></th>
                <th><%=resource.AppCustomer.ContactPersonEmail2nd.header%></th>
                <th><%=resource.AppCustomer.ContactPerson3rd.header%></th>
                <th><%=resource.AppCustomer.ContactPosition3rd.header%></th>
                <th><%=resource.AppCustomer.ContactPersonMobilePhone3rd.header%></th>
                <th><%=resource.AppCustomer.ContactPersonEmail3rd.header%></th>
                <th><%=resource.AppCustomer.Image.header%></th>
                <th><%=resource.AppCustomer.NotesDetails.header%></th>
                <th><%=resource.AppCustomer.Status.header%></th>
                <th><%=resource.AppCustomer.FirstContactDate.header%></th>
                
            	<th>View</th>
                <% if(session.user_acl=='ROLE_ADMIN') { %>
                <th>Edit</th>
                <th>Delete</th>
                <% } %>
            </tr>
            <% for(var i in records){let row = records[i]; %>			            
            <tr>
                <td><a><%=row.customer_id%></a></td>
                <td><a><%=row.cust_no%></a></td>
                <td><a><%=row.cust_name%></a></td>
                <td><a><%=row.cust_type%></a></td>
                <td><a><%=row.cust_classification%></a></td>
                <td><a><%=row.cust_category%></a></td>
                <td><a><%=row.contact_person%></a></td>
                <td><a><%=row.contact_position%></a></td>
                <td><a><%=row.contact_person_mobile_phone%></a></td>
                <td><a><%=row.contact_person_email%></a></td>
                <td><a><%=row.cust_tax_id%></a></td>
                <td><a><%=row.cust_credit_limit%></a></td>
                <td><a><%=row.cust_phone1%></a></td>
                <td><a><%=row.cust_phone2%></a></td>
                <td><a><%=row.cust_fax%></a></td>
                <td><a><%=row.cust_email_company%></a></td>
                <td><a><%=row.cust_website%></a></td>
                <td><a><%=row.cust_currency%></a></td>
                <td><a><%=row.cust_address1%></a></td>
                <td><a><%=row.cust_address2%></a></td>
                <td><a><%=row.cust_postal_code%></a></td>
                <td><a><%=row.city_id%></a></td>
                <td><a><%=row.province_id%></a></td>
                <td><a><%=row.country_id%></a></td>
                <td><a><%=row.delivery_address1%></a></td>
                <td><a><%=row.delivery_address2%></a></td>
                <td><a><%=row.delivery_address_postal_code%></a></td>
                <td><a><%=row.delivery_address_city%></a></td>
                <td><a><%=row.delivery_address_province%></a></td>
                <td><a><%=row.delivery_address_country%></a></td>
                <td><a><%=row.contact_person_2nd%></a></td>
                <td><a><%=row.contact_position_2nd%></a></td>
                <td><a><%=row.contact_person_mobile_phone_2nd%></a></td>
                <td><a><%=row.contact_person_email_2nd%></a></td>
                <td><a><%=row.contact_person_3rd%></a></td>
                <td><a><%=row.contact_position_3rd%></a></td>
                <td><a><%=row.contact_person_mobile_phone_3rd%></a></td>
                <td><a><%=row.contact_person_email_3rd%></a></td>
                <td><a><%=row.image%></a></td>
                <td><a><%=row.notes_details%></a></td>
                <td><a><%=row.status%></a></td>
                <td><a><%=dateFormat(row.first_contact_date,'mmm-dd-yyyy')%></a></td>
                
                <td><a href="/readAppCustomer?customerId=<%=row.customer_id%>"><span class="glyphicon glyphicon-open"></span></a></td>
                <% if(session.user_acl=='ROLE_ADMIN') { %>
                <td><a href="/writeAppCustomer?customerId=<%=row.customer_id%>"><span class="glyphicon glyphicon-edit"></span></a></td>
                <td><a href="/deleteAppCustomer?customerId=<%=row.customer_id%>"><span class="glyphicon glyphicon-trash"></span></a></td>
                <% } %>
            </tr>
            <% } %>            
        </table>
        
        <div class="table-pagination">
           <ul class="pagination">
                 <li><button type="submit" name="action" value="first" class="btn btn-default">First</button></li>
                 <li><button type="submit" name="action" value="previous" class="btn btn-default">Previous</button></li>
                 <li><button type="submit" name="action" value="next" class="btn btn-default">Next</button></li>
                 <li><button type="submit" name="action" value="last" class="btn btn-default">Last</button></li>
           </ul>	        
        </div>
    </div>
</form>                

</section>
</div>
</div>
<% include footer %>
</body>
</html>
