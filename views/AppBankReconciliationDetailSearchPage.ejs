<!DOCTYPE html>
<html>
<head lang="en">
<% include head %>
</head>
<body>
<% include side-nav %>
<div id="main">
<% include header-nav %>
<div class="container-fluid">
<section id="main-content">

<form class="form-horizontal" action="/searchAppBankReconciliationDetail" method="get">    
    <div style="width:50%">
    <h3><%=resource.Title%></h3>
        <input type="hidden" class="form-control" name="rowid" value="0"/>    
        <table class="table table-striped">
            <tr class="heading-tr">
                <th><%=resource.Heading%></th>
                <th></th>
                <th></th>
            </tr>
            <tr>
                <td><%=resource.BankReconciliationDetailId.label%></td>    
                <td><input type="text" class="form-control" name="bank_reconciliation_detail_id"/></td>
                <td>
                    <button type="submit" name="action" value="first" class="btn btn-default">Find</button>
                    <% if(session.user_acl=='ROLE_ADMIN') { %>
                    <button type="submit" class="btn btn-default"><a href="/newAppBankReconciliationDetail">Add</a></button>
                    <% } %>
                </td>
            </tr>
        </table>    
    </div>
    
    <div style="width:75%">
        <table class="table table-striped">
            <tr class="heading-tr">
                <th><%=resource.AppBankReconciliationDetail.BankReconciliationDetailId.header%></th>
                <th><%=resource.AppBankReconciliationDetail.BankReconciliationId.header%></th>
                <th><%=resource.AppBankReconciliationDetail.Date.header%></th>
                <th><%=resource.AppBankReconciliationDetail.ReferenceNo.header%></th>
                <th><%=resource.AppBankReconciliationDetail.Note.header%></th>
                <th><%=resource.AppBankReconciliationDetail.DebitAmount.header%></th>
                <th><%=resource.AppBankReconciliationDetail.CreditAmount.header%></th>
                <th><%=resource.AppBankReconciliationDetail.IsSelected.header%></th>
                
            	<th>View</th>
                <% if(session.user_acl=='ROLE_ADMIN') { %>
                <th>Edit</th>
                <th>Delete</th>
                <% } %>
            </tr>
            <% for(var i in records){let row = records[i]; %>			            
            <tr>
                <td><a><%=row.bank_reconciliation_detail_id%></a></td>
                <td><a><%=row.bank_reconciliation_id%></a></td>
                <td><a><%=dateFormat(row.date,'mmm-dd-yyyy')%></a></td>
                <td><a><%=row.reference_no%></a></td>
                <td><a><%=row.note%></a></td>
                <td><a><%=row.debit_amount%></a></td>
                <td><a><%=row.credit_amount%></a></td>
                <td><a><%=row.is_selected%></a></td>
                
                <td><a href="/readAppBankReconciliationDetail?bankReconciliationDetailId=<%=row.bank_reconciliation_detail_id%>"><span class="glyphicon glyphicon-open"></span></a></td>
                <% if(session.user_acl=='ROLE_ADMIN') { %>
                <td><a href="/writeAppBankReconciliationDetail?bankReconciliationDetailId=<%=row.bank_reconciliation_detail_id%>"><span class="glyphicon glyphicon-edit"></span></a></td>
                <td><a href="/deleteAppBankReconciliationDetail?bankReconciliationDetailId=<%=row.bank_reconciliation_detail_id%>"><span class="glyphicon glyphicon-trash"></span></a></td>
                <% } %>
            </tr>
            <% } %>            
        </table>
        
        <div class="table-pagination">
           <ul class="pagination">
                 <li><button type="submit" name="action" value="first" class="btn btn-default">First</button></li>
                 <li><button type="submit" name="action" value="previous" class="btn btn-default">Previous</button></li>
                 <li><button type="submit" name="action" value="next" class="btn btn-default">Next</button></li>
                 <li><button type="submit" name="action" value="last" class="btn btn-default">Last</button></li>
           </ul>	        
        </div>
    </div>
</form>                

</section>
</div>
</div>
<% include footer %>
</body>
</html>
