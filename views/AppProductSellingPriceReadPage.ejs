<!DOCTYPE html>
<html>
<head lang="en">
<% include head %>
</head>
<body>
<% include side-nav %>
<div id="main">
<% include header-nav %>
<div class="container-fluid">
<section id="main-content">

    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true"><h4><%=resource.Heading%></h4></a>
      </li>
    </ul>
    
    <div class="tab-content" id="myTabContent">

        <div class="tab-pane fade in active" id="home" role="tabpanel" aria-labelledby="home-tab">	
            <div style="width:40%">
            <form class="form-horizontal">
                <table class="table table-striped">
                    <tr class="heading-tr">
                        <th> <%=resource.Heading%></th>
                        <th></th>
                    </tr>
                    <tr>
                        <td><%=resource.ProductPriceId.label%></td>
                        <td><%=record.product_price_id%></td>						
                    </tr><tr>
                        <td><%=resource.ChangedDate.label%></td>
                        <td><%=dateFormat(record.changed_date,'mmm-dd-yyyy HH:MM:ss')%></td>						
                    </tr><tr>
                        <td><%=resource.ChangedBy.label%></td>
                        <td><%=record.Changed_by%></td>						
                    </tr><tr>
                        <td><%=resource.NormalPriceEffectiveDate.label%></td>
                        <td><%=dateFormat(record.normal_price_effective_date,'mmm-dd-yyyy HH:MM:ss')%></td>						
                    </tr><tr>
                        <td><%=resource.CalculationMethod.label%></td>
                        <td><%=record.calculation_method%></td>						
                    </tr><tr>
                        <td><%=resource.AmountOfCalculationMethod.label%></td>
                        <td><%=record.amount_of_calculation_method%></td>						
                    </tr><tr>
                        <td><%=resource.RoundUp.label%></td>
                        <td><%=record.round_up%></td>						
                    </tr><tr>
                        <td><%=resource.SmallestUnit.label%></td>
                        <td><%=record.smallest_unit%></td>						
                    </tr><tr>
                        <td><%=resource.PricingBase.label%></td>
                        <td><%=record.pricing_base%></td>						
                    </tr><tr>
                        <td><%=resource.IsIncludeTaxToSellingPrice.label%></td>
                        <td><%=record.is_include_tax_to_selling_price%></td>						
                    </tr><tr>
                        <td><%=resource.IsSelectedItem.label%></td>
                        <td><%=record.is_selected_item%></td>						
                    </tr><tr>
                        <td><%=resource.CurrentSellingPrice.label%></td>
                        <td><%=record.current_selling_price%></td>						
                    </tr><tr>
                        <td><%=resource.NewSellingPrice.label%></td>
                        <td><%=record.new_selling_price%></td>						
                    </tr><tr>
                        <td><%=resource.EffectiveDateOfNewSellingPrice.label%></td>
                        <td><%=dateFormat(record.effective_date_of_new_selling_price,'mmm-dd-yyyy HH:MM:ss')%></td>						
                    </tr><tr>
                        <td><%=resource.ProductId.label%></td>
                        <td><%=record.product_id%></td>						
                    </tr>
                
                </table>
                <% if(session.user_acl=='ROLE_ADMIN') { %>
                <button type="submit" class="btn btn-default"><a href="/writeAppProductSellingPrice?productPriceId=<%=record.product_price_id%>">Edit</a></button>
                <button type="submit" class="btn btn-default"><a href="/deleteAppProductSellingPrice?productPriceId=<%=record.product_price_id%>">Delete</a></button>
                <% } %>
                <button type="button" class="btn btn-default" onclick="javascript:window.history.back()">Back</button>
            </form>
            </div>
        </div>
        
    </div>

</section>
</div>
</div>
<% include footer %>
</body>
</html>
