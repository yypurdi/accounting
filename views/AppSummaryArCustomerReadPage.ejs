<!DOCTYPE html>
<html>
<head lang="en">
<% include head %>
</head>
<body>
<% include side-nav %>
<div id="main">
<% include header-nav %>
<div class="container-fluid">
<section id="main-content">

    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true"><h4><%=resource.Heading%></h4></a>
      </li>
    </ul>
    
    <div class="tab-content" id="myTabContent">

        <div class="tab-pane fade in active" id="home" role="tabpanel" aria-labelledby="home-tab">	
            <div style="width:40%">
            <form class="form-horizontal">
                <table class="table table-striped">
                    <tr class="heading-tr">
                        <th> <%=resource.Heading%></th>
                        <th></th>
                    </tr>
                    <tr>
                        <td><%=resource.SummaryArCustomerId.label%></td>
                        <td><%=record.summary_ar_customer_id%></td>						
                    </tr><tr>
                        <td><%=resource.CustomerId.label%></td>
                        <td><%=record.customer_id%></td>						
                    </tr><tr>
                        <td><%=resource.Date.label%></td>
                        <td><%=dateFormat(record.date,'mmm-dd-yyyy HH:MM:ss')%></td>						
                    </tr><tr>
                        <td><%=resource.BeginningBalanceDebit.label%></td>
                        <td><%=record.beginning_balance_debit%></td>						
                    </tr><tr>
                        <td><%=resource.BeginningBalanceCredit.label%></td>
                        <td><%=record.beginning_balance_credit%></td>						
                    </tr><tr>
                        <td><%=resource.DebitMutation.label%></td>
                        <td><%=record.debit_mutation%></td>						
                    </tr><tr>
                        <td><%=resource.CreditMutation.label%></td>
                        <td><%=record.credit_mutation%></td>						
                    </tr><tr>
                        <td><%=resource.EndingBalanceDebit.label%></td>
                        <td><%=record.ending_balance_debit%></td>						
                    </tr><tr>
                        <td><%=resource.EndingBalanceCredit.label%></td>
                        <td><%=record.ending_balance_credit%></td>						
                    </tr><tr>
                        <td><%=resource.BeginningBalance.label%></td>
                        <td><%=record.beginning_balance%></td>						
                    </tr><tr>
                        <td><%=resource.DeltaFromBegToEnd.label%></td>
                        <td><%=record.delta_from_beg_to_end%></td>						
                    </tr><tr>
                        <td><%=resource.EndingBalance.label%></td>
                        <td><%=record.ending_balance%></td>						
                    </tr><tr>
                        <td><%=resource.Paid.label%></td>
                        <td><%=record.paid%></td>						
                    </tr>
                
                </table>
                <% if(session.user_acl=='ROLE_ADMIN') { %>
                <button type="submit" class="btn btn-default"><a href="/writeAppSummaryArCustomer?summaryArCustomerId=<%=record.summary_ar_customer_id%>">Edit</a></button>
                <button type="submit" class="btn btn-default"><a href="/deleteAppSummaryArCustomer?summaryArCustomerId=<%=record.summary_ar_customer_id%>">Delete</a></button>
                <% } %>
                <button type="button" class="btn btn-default" onclick="javascript:window.history.back()">Back</button>
            </form>
            </div>
        </div>
        
    </div>

</section>
</div>
</div>
<% include footer %>
</body>
</html>
