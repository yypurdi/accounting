<!DOCTYPE html>
<html>
<head lang="en">
<% include head %>
</head>
<body>
<% include side-nav %>
<div id="main">
<% include header-nav %>
<div class="container-fluid">
<section id="main-content">

    <div style="width:40%">
    <h3><%=resource.Title%></h3>
    <form class="form-horizontal" action="/writeAppBackupInfo" method="post">
        <table class="table table-striped">
            <tr class="heading-tr">
                <th><%=resource.Heading%></th>
                <th style="text-align:right"><%=statusMessage%></th>
            </tr>
            <tr>
                <td><%=resource.BackupInfoId.label%></td>
                <td><input type="text" class="form-control" name="backupInfoId" value="<%=record.backup_info_id%>"/></td>
            </tr><tr>
                <td><%=resource.BackupFolder.label%></td>
                <td><input type="text" class="form-control" name="backupFolder" value="<%=record.backup_folder%>"/></td>
            </tr><tr>
                <td><%=resource.ArchiveFileName.label%></td>
                <td><input type="text" class="form-control" name="archiveFileName" value="<%=record.archive_file_name%>"/></td>
            </tr><tr>
                <td><%=resource.BackupDate.label%></td>
                <td><input type="text" class="form-control" name="backupDate" value="<%=record.backup_date%>"/></td>
            </tr><tr>
                <td><%=resource.BackupBy.label%></td>
                <td><input type="text" class="form-control" name="backupBy" value="<%=record.backup_by%>"/></td>
            </tr>
        
        </table>
        <button type="submit" class="btn btn-default">Update</button>
        <% if(statusCode == 200) { %>
        <button type="button" class="btn btn-default""><a href="/<%=session.previouspath%>">Back</a></button>
        <% }else{ %>
        <button type="button" class="btn btn-default" onclick="javascript:window.history.back()">Cancel</button>
        <% } %>
    </form>
    </div>

</section>
</div>
</div>
<% include footer %>
</body>
</html>
