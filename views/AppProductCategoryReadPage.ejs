<!DOCTYPE html>
<html>
<head lang="en">
<% include head %>
</head>
<body>
<% include side-nav %>
<div id="main">
<% include header-nav %>
<div class="container-fluid">
<section id="main-content">

    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true"><h4><%=resource.Heading%></h4></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="appProduct-tab" data-toggle="tab" href="#appProduct" role="tab" aria-controls="appProduct" aria-selected="true"><h4><%=resource.AppProduct.Heading%></h4></a>
      </li>
    </ul>
    
    <div class="tab-content" id="myTabContent">

        <div class="tab-pane fade in active" id="home" role="tabpanel" aria-labelledby="home-tab">	
            <div style="width:40%">
            <form class="form-horizontal">
                <table class="table table-striped">
                    <tr class="heading-tr">
                        <th> <%=resource.Heading%></th>
                        <th></th>
                    </tr>
                    <tr>
                        <td><%=resource.ProductCategoryId.label%></td>
                        <td><%=record.product_category_id%></td>						
                    </tr><tr>
                        <td><%=resource.CategoryName.label%></td>
                        <td><%=record.category_name%></td>						
                    </tr><tr>
                        <td><%=resource.Location.label%></td>
                        <td><%=record.location%></td>						
                    </tr><tr>
                        <td><%=resource.DepartmentId.label%></td>
                        <td><%=record.department_id%></td>						
                    </tr><tr>
                        <td><%=resource.IsInventory.label%></td>
                        <td><%=record.is_inventory%></td>						
                    </tr><tr>
                        <td><%=resource.IsPurchased.label%></td>
                        <td><%=record.is_purchased%></td>						
                    </tr><tr>
                        <td><%=resource.IsSold.label%></td>
                        <td><%=record.is_sold%></td>						
                    </tr><tr>
                        <td><%=resource.InventoryMethod.label%></td>
                        <td><%=record.inventory_method%></td>						
                    </tr><tr>
                        <td><%=resource.AcctCodeCogs.label%></td>
                        <td><%=record.acct_code_cogs%></td>						
                    </tr><tr>
                        <td><%=resource.AcctCodeSales.label%></td>
                        <td><%=record.acct_code_sales%></td>						
                    </tr><tr>
                        <td><%=resource.AcctCodeSalesReturn.label%></td>
                        <td><%=record.acct_code_sales_return%></td>						
                    </tr><tr>
                        <td><%=resource.AcctCodeInventory.label%></td>
                        <td><%=record.acct_code_inventory%></td>						
                    </tr><tr>
                        <td><%=resource.AcctCodeConsignment.label%></td>
                        <td><%=record.acct_code_consignment%></td>						
                    </tr><tr>
                        <td><%=resource.Image.label%></td>
                        <td><%=record.image%></td>						
                    </tr>
                
                </table>
                <% if(session.user_acl=='ROLE_ADMIN') { %>
                <button type="submit" class="btn btn-default"><a href="/writeAppProductCategory?productCategoryId=<%=record.product_category_id%>">Edit</a></button>
                <button type="submit" class="btn btn-default"><a href="/deleteAppProductCategory?productCategoryId=<%=record.product_category_id%>">Delete</a></button>
                <% } %>
                <button type="button" class="btn btn-default" onclick="javascript:window.history.back()">Back</button>
            </form>
            </div>
        </div>
        
	<div class="tab-pane fade" id="appProduct" role="tabpanel" aria-labelledby="appProduct-tab">
            <div style="width:75%">
            <table class="table table-striped">
                <tr class="heading-tr">
                    <th><%=resource.AppProduct.ProductId.header%></th>
                    <th><%=resource.AppProduct.ProductCode.header%></th>
                    <th><%=resource.AppProduct.ProductDesc.header%></th>
                    <th><%=resource.AppProduct.BaseUnit.header%></th>
                    <th><%=resource.AppProduct.ReportUnit.header%></th>
                    <th><%=resource.AppProduct.ProductGroup1st.header%></th>
                    <th><%=resource.AppProduct.ProductGroup2nd.header%></th>
                    <th><%=resource.AppProduct.ProductGroup3rd.header%></th>
                    <th><%=resource.AppProduct.ProductGroup4th.header%></th>
                    <th><%=resource.AppProduct.AliasCode.header%></th>
                    <th><%=resource.AppProduct.IsUseSerialNumber.header%></th>
                    <th><%=resource.AppProduct.IsUseLot.header%></th>
                    <th><%=resource.AppProduct.IsConsignment.header%></th>
                    <th><%=resource.AppProduct.IsNotActive.header%></th>
                    <th><%=resource.AppProduct.IsSeasonalProduct.header%></th>
                    <th><%=resource.AppProduct.ProductCategoryId.header%></th>
                                        
                    <th>View</th>
                    <% if(session.user_acl=='ROLE_ADMIN') { %>
                    <th>Edit</th>
                    <th>Delete</th>
                    <% } %>
                </tr>
                <% for(let i in record.appProduct){ let rec = record.appProduct[i] %>
                <tr>
                    <td><a><%=rec.product_id%></a></td>
                    <td><a><%=rec.product_code%></a></td>
                    <td><a><%=rec.product_desc%></a></td>
                    <td><a><%=rec.base_unit%></a></td>
                    <td><a><%=rec.report_unit%></a></td>
                    <td><a><%=rec.product_group_1st%></a></td>
                    <td><a><%=rec.product_group_2nd%></a></td>
                    <td><a><%=rec.product_group_3rd%></a></td>
                    <td><a><%=rec.product_group_4th%></a></td>
                    <td><a><%=rec.alias_code%></a></td>
                    <td><a><%=rec.is_use_serial_number%></a></td>
                    <td><a><%=rec.is_use_lot%></a></td>
                    <td><a><%=rec.is_consignment%></a></td>
                    <td><a><%=rec.is_not_active%></a></td>
                    <td><a><%=rec.is_seasonal_product%></a></td>
                    <td><a><%=rec.product_category_id%></a></td>
                    
                    <td><a href="/readAppProduct?productId=<%=rec.product_id%>"><span class="glyphicon glyphicon-open"></span></a></td>
                    <% if(session.user_acl=='ROLE_ADMIN') { %>
                    <td><a href="/writeAppProduct?productId=<%=rec.product_id%>"><span class="glyphicon glyphicon-edit"></span></a></td>
                    <td><a href="/deleteAppProduct?productId=<%=rec.product_id%>"><span class="glyphicon glyphicon-trash"></span></a></td>
                    <% } %>
                </tr>
                <% } %>
            </table>        
	    <button type="submit" class="btn btn-default"><a href="/newAppProduct">Add</a></button>
	    <button type="submit" class="btn btn-default">Clear</button>
	    </div>	    
        </div>            
        
    </div>

</section>
</div>
</div>
<% include footer %>
</body>
</html>
