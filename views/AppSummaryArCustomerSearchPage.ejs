<!DOCTYPE html>
<html>
<head lang="en">
<% include head %>
</head>
<body>
<% include side-nav %>
<div id="main">
<% include header-nav %>
<div class="container-fluid">
<section id="main-content">

<form class="form-horizontal" action="/searchAppSummaryArCustomer" method="get">    
    <div style="width:50%">
    <h3><%=resource.Title%></h3>
        <input type="hidden" class="form-control" name="rowid" value="0"/>    
        <table class="table table-striped">
            <tr class="heading-tr">
                <th><%=resource.Heading%></th>
                <th></th>
                <th></th>
            </tr>
            <tr>
                <td><%=resource.SummaryArCustomerId.label%></td>    
                <td><input type="text" class="form-control" name="summary_ar_customer_id"/></td>
                <td>
                    <button type="submit" name="action" value="first" class="btn btn-default">Find</button>
                    <% if(session.user_acl=='ROLE_ADMIN') { %>
                    <button type="submit" class="btn btn-default"><a href="/newAppSummaryArCustomer">Add</a></button>
                    <% } %>
                </td>
            </tr>
        </table>    
    </div>
    
    <div style="width:75%">
        <table class="table table-striped">
            <tr class="heading-tr">
                <th><%=resource.AppSummaryArCustomer.SummaryArCustomerId.header%></th>
                <th><%=resource.AppSummaryArCustomer.CustomerId.header%></th>
                <th><%=resource.AppSummaryArCustomer.Date.header%></th>
                <th><%=resource.AppSummaryArCustomer.BeginningBalanceDebit.header%></th>
                <th><%=resource.AppSummaryArCustomer.BeginningBalanceCredit.header%></th>
                <th><%=resource.AppSummaryArCustomer.DebitMutation.header%></th>
                <th><%=resource.AppSummaryArCustomer.CreditMutation.header%></th>
                <th><%=resource.AppSummaryArCustomer.EndingBalanceDebit.header%></th>
                <th><%=resource.AppSummaryArCustomer.EndingBalanceCredit.header%></th>
                <th><%=resource.AppSummaryArCustomer.BeginningBalance.header%></th>
                <th><%=resource.AppSummaryArCustomer.DeltaFromBegToEnd.header%></th>
                <th><%=resource.AppSummaryArCustomer.EndingBalance.header%></th>
                <th><%=resource.AppSummaryArCustomer.Paid.header%></th>
                
            	<th>View</th>
                <% if(session.user_acl=='ROLE_ADMIN') { %>
                <th>Edit</th>
                <th>Delete</th>
                <% } %>
            </tr>
            <% for(var i in records){let row = records[i]; %>			            
            <tr>
                <td><a><%=row.summary_ar_customer_id%></a></td>
                <td><a><%=row.customer_id%></a></td>
                <td><a><%=dateFormat(row.date,'mmm-dd-yyyy')%></a></td>
                <td><a><%=row.beginning_balance_debit%></a></td>
                <td><a><%=row.beginning_balance_credit%></a></td>
                <td><a><%=row.debit_mutation%></a></td>
                <td><a><%=row.credit_mutation%></a></td>
                <td><a><%=row.ending_balance_debit%></a></td>
                <td><a><%=row.ending_balance_credit%></a></td>
                <td><a><%=row.beginning_balance%></a></td>
                <td><a><%=row.delta_from_beg_to_end%></a></td>
                <td><a><%=row.ending_balance%></a></td>
                <td><a><%=row.paid%></a></td>
                
                <td><a href="/readAppSummaryArCustomer?summaryArCustomerId=<%=row.summary_ar_customer_id%>"><span class="glyphicon glyphicon-open"></span></a></td>
                <% if(session.user_acl=='ROLE_ADMIN') { %>
                <td><a href="/writeAppSummaryArCustomer?summaryArCustomerId=<%=row.summary_ar_customer_id%>"><span class="glyphicon glyphicon-edit"></span></a></td>
                <td><a href="/deleteAppSummaryArCustomer?summaryArCustomerId=<%=row.summary_ar_customer_id%>"><span class="glyphicon glyphicon-trash"></span></a></td>
                <% } %>
            </tr>
            <% } %>            
        </table>
        
        <div class="table-pagination">
           <ul class="pagination">
                 <li><button type="submit" name="action" value="first" class="btn btn-default">First</button></li>
                 <li><button type="submit" name="action" value="previous" class="btn btn-default">Previous</button></li>
                 <li><button type="submit" name="action" value="next" class="btn btn-default">Next</button></li>
                 <li><button type="submit" name="action" value="last" class="btn btn-default">Last</button></li>
           </ul>	        
        </div>
    </div>
</form>                

</section>
</div>
</div>
<% include footer %>
</body>
</html>
